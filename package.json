{
	"private": true,
	"name": "@wasm-oj/wonderland",
	"version": "0.0.0",
	"type": "module",
	"author": {
		"name": "Jacob Lin",
		"email": "jacob@csie.cool"
	},
	"license": "MIT",
	"files": [
		"build"
	],
	"scripts": {
		"prepare": "husky install",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --ignore-path .gitignore --check **/*.{ts,js,json,yaml,yml,svelte,html,css} && eslint .",
		"format": "prettier --ignore-path .gitignore --write **/*.{ts,js,json,yaml,yml,svelte,html,css}",
		"changeset": "changeset",
		"upload": "CF_PAGES=1 pnpm build && wrangler pages publish --project-name woj .svelte-kit/cloudflare",
		"tail": "wrangler pages deployment tail --project-name woj",
		"sdk:build": "tsx scripts/build-sdk.ts",
		"postpublish": "pnpm sdk:build --publish"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@cloudflare/workers-types": "^4.20230518.0",
		"@iarna/toml": "^2.2.5",
		"@iconify/svelte": "^3.1.4",
		"@playwright/test": "^1.35.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-cloudflare": "^2.3.0",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.20.2",
		"@tailwindcss/typography": "^0.5.9",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/better-sqlite3": "^7.6.4",
		"@types/debug": "^4.1.8",
		"@types/iarna__toml": "^2.0.2",
		"@types/yauzl": "^2.10.0",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"autoprefixer": "^10.4.14",
		"better-sqlite3": "^8.4.0",
		"daisyui": "^3.0.22",
		"debug": "^4.3.4",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"highlight.js": "^11.8.0",
		"husky": "^8.0.3",
		"kysely": "^0.25.0",
		"kysely-d1": "^0.3.0",
		"lint-staged": "^13.2.2",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"svelte-i18n": "^3.6.0",
		"svelte-markdown": "^0.2.3",
		"sveltekit-api": "^0.2.11",
		"sveltekit-jwt": "^0.2.0",
		"sveltekit-superforms": "^1.0.0-rc.4",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.3",
		"tsx": "^3.12.7",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vitest": "^0.32.0",
		"yauzl": "^2.10.0",
		"zod": "^3.21.4"
	},
	"lint-staged": {
		"*.{ts,js,json,yaml,yml,svelte,html,css}": [
			"prettier --write"
		]
	},
	"packageManager": "pnpm@8.6.0",
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "^5.1.0"
	}
}
